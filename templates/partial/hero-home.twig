<section class="l-hero">
	<div class="l-hero__content">
		<div class="l-hero__left">
			<h1 class="u-h1">{{data.title}}</h1>
			<a href="{{data.link.url}}" class="u-btn is-white-border">{{data.link.title}}</a>
		</div>
		<div class="l-hero__right">
			{% for post in popular_posts|slice(0, 2) %}
				<div class="c-post">
					<div class="c-post__author">
