						<span>{{post.author_name}}</span>
					</div>
					<div class="c-post__title">{{post.title}}</div>
					<a href="{{post.permalink}}" class="u-btn is-white-border">{{ 'Learn more' | translateString('buttons - Learn more') }}</a>
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="l-hero__bottom">
		<a href="{{shop_link}}" class="u-btn is-white-border">{{ 'Shop now' | translateString('buttons - Shop now') }}</a>
	</div>						
</section>